# Telegram Bot Token (Get this from @BotFather)
TELEGRAM_BOT_TOKEN=

# Your Telegram Chat ID (Get this from @userinfobot or similar)
TELEGRAM_CHAT_ID=

# Log file path (Default: /var/log/auth.log for Debian/Kali)
LOG_FILE_PATH=/var/log/auth.log

# Optional: Threshold for failed attempts before alerting (currently 1 = immediate)
ALERT_THRESHOLD=1

# Gmail Configuration (Requires App Password)
GMAIL_USER=your_email@gmail.com
GMAIL_APP_PASSWORD=your_app_password
ALERT_RECIPIENT_EMAIL=your_email@gmail.com

